#:kivy 2.3.0
#:import MDLabel kivymd.uix.label.MDLabel
#:import MDTextButton kivymd.uix.button.MDTextButton

<TemplateButtonDelete>:
    # id: btn_del

    icon: "trash-can-outline"
    style: "filled"

    theme_icon_color: "Custom"
    text_color: app.theme_cls.error_color

    pos_hint: {"center_x": 0.8, "center_y": 0.8}
    on_touch_down:
        if self.collide_point(*args[1].pos): root.dispatch('on_btn_click', self.parent.id)

<TemplateButtonActivate>:
    # id: btn_activate

    style: "filled"
    md_bg_color: [0, 0.9, 0, 1]
    # text_color: app.theme_cls.

    pos_hint: {"center_x": 0.5, "center_y": 0.15}

    text: "aktywuj"
    font_size: "18dp"
    on_touch_down:
        if self.collide_point(*args[1].pos): root.dispatch('on_button_touch', self.parent.id)

<TemplateButton>:
    font_size: '10dp'
    size_hint: [0.5, None]
    height: "200dp"
    padding: "20dp"
    # index: 1
    # on_touch_down:
    #     root.dispatch('on_template_touch', root.id)

    canvas.before:
        Color:
            rgba: app.theme_cls.bg_normal if app.theme_cls.theme_style == "Light" else app.theme_cls.bg_dark
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [20,]

    MDLabel:
        id: templ_name
        text: "test"
        # font_size: self.parent.height / 8 if self.parent.height / 8 < 32 else 32
        font_size: self.parent.height / 8
        
        theme_text_color: "Custom"
        text_color: app.theme_cls.text_color
         
        pos_hint: {"center_x": 0.5, "center_y": 0.6}
        padding: "20dp"

    MDLabel:
        id: templ_speed
        text: "test speed"

        # font_size: self.parent.height / 16 if self.parent.height / 16 < 24 else 24
        font_size: self.parent.height / 16

        theme_text_color: "Custom"
        text_color: app.theme_cls.secondary_text_color

        pos_hint: {"center_y": 0.4, "center_x": 0.5}
        padding: "20dp" 

    TemplateButtonDelete:
        id: btn_del

    TemplateButtonActivate:
        id: btn_activate



    