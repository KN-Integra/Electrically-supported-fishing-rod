#:kivy 2.2.0

<ConnectScreen>:
    canvas.before:
        Color:
            rgba: (0.16,0.22,0.28,1)
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        width: root.width
        height: root.height
        orientation: 'vertical'
        spacing: '10dp'
        padding: '10dp'
        Image:
            source: 'media/integra-icon.png'
            fit_mode: "contain"
            width: root.width

        Label:
            id: title
            bold: True
            font_size: '45dp'
            text: "WWE Sumołów 2000"
            font_name: "lilita-one"

        RoundedButton:
            text: "Automatic connect"
            on_release: root.connect_auto()

        RoundedButton:
            id: connect_button
            text: "Scan"
            on_release: root.scan_for_devices()

        BoxLayout:
            orientation: 'horizontal'
            spacing: '10dp'
            RoundedButton:
                text: "Connect"
                on_release: root.connect_with_mac()
            RoundedInput:
                font_size: '18dp'
                id: input_address

        Label:
            size_hint_y: 0.2
            id: connection_label
            text: ""
            color: (1,0,0,0.9)

        TextInput:
            id: scan_result
            padding: '15dp'
            font_size: '15dp'
            text: "scan results"
            size_hint_y: 2
            multiline: True
            readonly: True
            halign:'center'
            cursor_width: '2dp'
            canvas.before:
                Color:
                    rgba: (1, 1, 1, 0.8)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20,]
                Color:
                    rgba: (0.3, 0.3, 0.3, 1)
        
        Image:
            source: "media/nordic_logo.png"
            size: self.texture_size
            fit_mode: "contain"
