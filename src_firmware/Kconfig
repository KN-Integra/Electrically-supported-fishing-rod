menu "Zephyr Kernel"
source "Kconfig.zephyr"
endmenu

menu "Wyndka configuration"
config GEARSHIFT_RATIO
        int
        default 150
        help
                Gearshift ratio of attached motor

config ENC_STEPS_PER_ROTATION
        int
        default 64
        help
                Number of encoder steps per one full rotation

config ENC_TIMER_PERIOD_MS
        int
        default 100
        help
                Sampling period for continuus speed calculation
endmenu
